.More_info_desc{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: -3rem;
  font-weight: bold;
  color: #44236b;
  font-size: 1.7rem;
}

.Content_title_box .desc{
  font-size: 1.7rem;
  font-weight: 300;
  color: #44236b;
  margin-bottom: 3.5rem;
}

.Content_title_box .desc span{
  font-weight: bold;
}

.Waitlist_box{
  height: 20rem;
  width: 56rem;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  background-color: #733cb3;
  border-radius: 5rem;

  margin-top: 2rem;

}

.Waitlist_box p{
  text-align: center;
  color: #fff;
  font-size: 1.7rem;
  font-weight: 400;
}

.Waitlist_box .button_box_waitlist{
  height: 5rem;
  width: 44rem;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: -1rem;
  cursor: pointer;

  gap: 1rem;

  padding: 3rem 0;
  border-radius: 5rem;

  background-image: linear-gradient(90deg, #f7b942, #e78700);
  box-shadow: 1px 3px 5px -1px rgb(48 15 87 / 57%);

  text-decoration: none;
  transition: 0.7s ease-in-out;

}

.Waitlist_box .button_box_waitlist span{
  font-weight: bold;
  font-size: 3.2rem;
  color: #fff;
}

.photoProduct{
  height: 70rem;
  border-radius: 1rem;
}

.photoblock_waitlist{
  height: 8rem;
}

.l--pop-up-content {
  position: fixed;
  visibility: hidden;
  left: 0%;
  top: 0%;
  right: 0%;
  bottom: 0%;
  z-index: 100;
  width: 665px;
  height: 570px;
  margin: auto;

  background-color: #452683;
  box-shadow: 0px 10px 40px 500px rgba(0, 0, 0, 0.700);
  border-radius: 2rem;
  
  transition: 0.5s ease-out;
    
}

.l-x-sign {
    position: absolute;
    left: auto;
    top: 0%;
    right: 0%;
    bottom: auto;
    padding: 12px 15px 15px;
    cursor: pointer;
}

.c-title-popup1 {
