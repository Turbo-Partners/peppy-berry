{% style %}

.general_product_section{
  height: auto;

  padding: 4rem;
}

.content_geral_box{
/*   display: flex;
  justify-content: center;

  gap: 4rem; */
  display: grid;
  grid-template-columns: auto auto;
  gap: 4rem;

  padding: 4rem;
}

/* .content_geral_box .InfosBoxContent {
  display: grid;
