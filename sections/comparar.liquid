<style>

    .comp-content{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        gap: 3rem;

        padding: 7rem;
    }

    .comp-content .title-comp{
        display: flex;
        flex-direction: column;
        align-items: center;

       {% comment %}  margin-top: 3rem; {% endcomment %}
    }

    .comp-content .title-comp .title{
        color: #c7d40d;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .comp-content .title-comp .subtitle{
        color: #321c56;
        font-size: 4rem;
        font-weight: bold;

    }

    .comparacao{
        height: 26rem;
    }

    .comparacao2, .subtitle_mobile{
        display: none;
    }

    @media screen and (max-width: 1050px){
        .comp-content .title-comp .title{
            color: #c7d40d;
            font-size: 2rem;
            font-weight: bold;
        }

        .subtitle_mobile{
            text-align: center;
            font-size: 4rem;
            font-weight: bold;
            line-height: 1;
            color: #321c56;
        }
        .comparacao, .subtitle{
            display: none;
        }

        .comparacao2{
            display: block;
            height: 35rem;
        }

        .subtitle_mobile{
            display: block;
        }
    }
</style>

<a name="diferenciais">
<div class="backgroundcomp">
    <div class="comp-content">  
        <div class="title-comp">
            <span class="title">VAMOS COMPARAR</span>
            <span class="subtitle">Peppy Berry x Outros</span>
            <span class="subtitle_mobile">Peppy Berry <br/>x<br/> Outros</span>
        </div>
        <div>
           <img class="comparacao" src="{{ section.settings.image_compare | image_url }}" width="auto" height="auto" loading="lazy">
           <img class="comparacao2" src="{{ section.settings.image_compare2 | image_url }}" width="auto" height="auto" loading="lazy">
        </div>
    </div>
</div>
</a>

{% schema %}
{
    "name": "Comparar produtos",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image_compare",
            "label": "Comparação"
        },
        {
            "type": "image_picker",
            "id": "image_compare2",
            "label": "Comparação Mobile"
        }
    ],
    "presets": [
        {
        "name": "Comparar produtos",
        "category": "imagem"
        }
    ]
}
{% endschema %}