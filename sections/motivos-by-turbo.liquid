{% style %}
.background-m{
    background-color: #c7d40d;
    background-size: cover;

    margin-top: -7rem;
}

.container-contents-m{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    padding: 5rem;
    gap: 8rem;
}

.container-contents-m .thumb-videos-m{
    display: flex;
    flex-direction: flex;
    align-items: center;
    justify-content: center;

    gap: 5rem;
}

.container-contents-m .thumb-videos-m .thumb-box-m{
    display: flex;
    flex-direction: column;
    align-items: start;
    /* background-color: red; */

    height: 50rem;
    width: 30rem;
    
    line-height:1.4;
}

.container-contents-m .thumb-videos-m .thumb-box-m video{
    width: 30rem;
    height: 30rem;
    object-fit: cover;
    
    border-radius: 2rem;
}

.title-m-box{
    margin-top: 10rem;
}

.title-m{
    font-size: 3.5rem;
    color: #683f66;
    font-weight: bold;

}

.thumb-videos-m span{
    color: #c7d40d;
    font-size: 1.7rem;
    font-weight: bold;

    display: flex;
    align-items: center;

    gap: 1rem;
}

.thumb-videos-m p{
    color: #000;
    font-weight: 300;

    margin-top: 0.5rem;
}

@media screen and (max-width: 1050px){
    .container-contents-m .thumb-videos-m{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        gap: 0rem;
    }

    .title-m{
        font-size: 3rem;
        line-height: 1.4;
    }
}

{% endstyle %}

